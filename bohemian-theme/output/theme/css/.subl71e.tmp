/***** Global *****/
*, *:before, *:after {
  -webkit-box-sizing: border-box; 
  -moz-box-sizing: border-box; 
  box-sizing: border-box;
}

/* Body */
body {
  width: 100%;
  max-width: 960px;
  margin: 0 auto;
  padding-left: 20px;
  padding-right: 20px;

  font-family: Alegreya, Calendas Plus, sans-serif;
  font-size: 18px;
  line-height: 1.4;

  -moz-font-feature-settings: "liga=1, dlig=1";
  -ms-font-feature-settings: "liga", "dlig";
  -webkit-font-feature-settings: "liga", "dlig";
  -o-font-feature-settings: "liga", "dlig";
  font-feature-settings: "liga", "dlig";
  
}

h1, h2, h3, h4, h5, h6,
.h1,.h2,.h3,.h4,.h5,.h6{

  font-family: Alegreya SC, Roboto Black, Roboto;
  font-weight: 700;
  text-transform: lowercase;
  /*letter-spacing: .05em;*/
  color: brown;
  text-shadow: 2px 2px 0 moccasin;
  /*text-align: center;*/
}

h1:before, h2:before, h3:before, h4:before, h5:before, h6:before,
.h1:before, .h2:before, .h3:before, .h4:before, .h5:before, .h6:before{
  /*content: "❴";*/
  font-weight: 200;
  content: "¶ ";
  opacity: .3;  
  
  }

h1:after, h2:after, h3:after, h4:after, h5:after, h6:after,
.h1:after, .h2:after, .h3:after, .h4:after, .h5:after, .h6:after{
  /*content: "❵";*/
  content: " ";
  font-weight: 200;
  opacity: .3;  
}

a{
  border-bottom: 1px dotted gray;

  color:#222;
  font-family: Alegreya SC;
  text-decoration: none;
}

a:hover{
  border-bottom: 1px solid gray;
}

blockquote p{
  padding: 10px;
  margin-left: 40px;
  font-style: italic;
  border-left: 4px solid moccasin;
}

/* SITEHEADER */

.siteheader{
  text-align: center;
}

.siteheader__sitename a,
.siteheader__sitename,
.siteheader__sitesubtitle{
  border-bottom: none;
  padding: 0;
  margin: 0;
}

.siteheader__sitename{
  font-weight: 200;
  text-transform: lowercase;
}

.siteheader__sitename:after, .siteheader__sitename:before{
  content: " ";
}

.siteheader__sitesubtitle{
  /*position: absolute;*/
  /*bottom:0px;*/

  font-family: Hagin Caps Thin;
  font-size: 3em;
  font-weight: 900;
  padding-top: 10px;
  text-align: center;
}

.siteheader__sitesubtitle:before{
  content: "";
}


/* MENU */

.menu{
  text-align: center;
  font-size: 1em;
  margin-top: 20px;
}

.menu__list li a{
  display: block;
  width: 100%;
  padding: 15px 5px 10px 5px;

  border-top: 3px double moccasin;
  border-bottom: none;

  font-family: Code, Cicle Fina, Hagin Caps Thin, Roboto Black, Roboto;
  font-weight: 900;
  text-transform: uppercase;
  letter-spacing: .15em;
}

.menu__list li a:hover{
  background-color: #fefeee;
}

.menu__list li:last-of-type{
  border-bottom: 3px double moccasin;
}

.footer{
  text-align: center;
}

.footer__attribution{
  margin: 0 auto;
  line-height: 2;

  text-align: center;
  font-style: italic;
}


