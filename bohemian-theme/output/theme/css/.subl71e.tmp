/* LARGE SCREENS */

@media all and (min-width: 800px) and (min-device-width : 480px){
  .siteheader__sitetitle{
    font-size: 2.2em;
  }

  .github_ribbon{
    display: block;
  }

  body{
    font-size:24px;
  }

  .siteheader{
    display: block;
    float:left;
    text-align: right;
  }
  
  .siteheader__sitename,
  .siteheader__sitesubtitle{
  }

  .menu{
    float:right;
    /*margin-top: 40px;*/

  }

  .menu__list li{
    display: inline-block;
    margin-left: 20px;

    background-color: #fff;
    border-top: 0;
  }

  .menu__list li a{
    background-color: rgba(255,255,255,0);
    padding: 0px 0px;
    margin: 0px;
    border-top: 0;
  }

  .menu__list li a:before{
    content: "/ ";
  }

  .menu__list li a:hover{
    background-color: #fff;
    border-bottom: 5px solid moccasin;
  }



  .menu__list li:last-child:after{
    content: "";
    border-bottom: none;
  }

  .menu__list li:last-of-type{
    border-bottom: 0;
  }

}